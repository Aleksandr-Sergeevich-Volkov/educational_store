<?xml version="1.0" encoding="UTF-8"?>
<yml_catalog date="{{ current_date }}">
 <shop>
  <name>Компрессионные_чулки24</name>
  <company>ООО "Консалтинговый центр "Алгоритм"</company>
  <url>https://kompressionnye-chulki24.ru</url>
  <version>1.0</version>
  <email>volkovaleksandrsergeevich@yandex.ru</email>
  <currencies>
   <currency id="RUB" rate="1"></currency>
  </currencies>
  <categories>
   <category id="1">Компрессионный трикотаж</category>
   <category id="10" parentId="1">Компрессионные чулки</category>
   <category id="20" parentId="1">Компрессионные гольфы</category>
   <category id="30" parentId="1">Компрессионные колготки</category>
  </categories>
  <offers>
   {% for product in products %}
   <offer id="{{ product.id }}" available="true">
    <url>https://kompressionnye-chulki24.ru{% url 'catalog:detail' product.slug %}</url>
    <price>{{ product.price|floatformat:0 }}</price>
    <currencyId>RUB</currencyId>
    <categoryId>{{ product.category_id }}</categoryId>
    <name>{{ product.name }}</name>
    <picture>https://kompressionnye-chulki24.ru{{ product.main_image_url }}</picture>
    <description>
     <![CDATA[<p>{{ product.name }}</p>]]>
    </description>
   </offer>
   {% endfor %}
  </offers>
 </shop>
</yml_catalog>